<p id="notice"><%= notice %></p>

<h1>Clothings</h1>

<form method="GET" action="/clothings">
  Nombre o apellido del conductor: <input type="text" name="filter" />
  <input type="submit" />
</form>

<table class="table table-striped" style="background-color:#42F1BD;">
  <thead>
    <tr>
      <th>Presenter</th>
      <th>Transmission</th>
      <th>Garment</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @clothings.each do |clothing| %>
      <tr>
        <td><%= clothing.presenter.full_name %></td>
        <td><%= clothing.transmission.full_transmission %></td>
        <td><%= clothing.garment.full_garment %></td>
        <td><%= link_to 'Show', clothing %></td>
        <td><%= link_to 'Edit', edit_clothing_path(clothing) %></td>
        <td><%= link_to 'Destroy', clothing, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Clothing', new_clothing_path %>
